<%= @post.title %>
<%= image_tag(@post.image, alt: '', height: '300', width: 'auto') %>
<%= @post.link %>
<%= @post.description %>
<%= @post.user.name %>
<%= @post.get_upvotes.size %>
  Likes
<%= @post.get_downvotes.size %>
  Dislike
<%= link_to "Like", like_post_path(@post), method: :get %>
<%= link_to "Dislike", dislike_post_path(@post), method: :get %>

 <%= comment_count= pluralize(@post.comments.count, "Comment") %>
  Comments
  <% @comments.each do |comment| %>
      <%= comment.user.name %>
      <%= content= comment.content %>
      <% end %>
<%= render 'comments/form' %>
<%= link_to "Edit", edit_post_path %>
<%= link_to "Destroy", post_path, method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to "Home", root_path %>
